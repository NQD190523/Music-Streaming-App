<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llAlbumItem"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="8dp">

            <ImageView
                android:id="@+id/imvPhoto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/song1"  />

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtAlbumName"
                style="@style/Body1Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top songs: Taylor Swift"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/txtAlbumTotalSongs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="125 songs"
                style="@style/Body2"
                android:textColor="@color/subText"
                />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_20_left"
            android:paddingHorizontal="4dp"
            android:rotation="180"
            />

    </LinearLayout>

</LinearLayout>
