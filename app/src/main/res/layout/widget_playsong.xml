<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/dp_8"
    android:orientation="horizontal"
    android:background="#10FFFFFF">


    <ImageView
        android:id="@+id/imvSongPhoto"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/dp_16"
        android:src="@drawable/artist1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_weight="9">

        <TextView
            android:id="@+id/txtSongName"
            style="@style/Body1Bold"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Song Name"
            android:textColor="@color/white"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/txtArtistName"
            style="@style/Body2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Artist Name"
            android:textColor="@color/subText"
            android:maxLines="1"
            android:ellipsize="end"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/imvLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_8"
            android:src="@drawable/ic_heart_20_outlined"/>

        <ImageView
            android:id="@+id/imvPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_8"
            android:src="@drawable/ic_pause_20_filled"/>

        <ImageView
            android:id="@+id/imvNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_8"
            android:src="@drawable/ic_next_20_filled" />
    </LinearLayout>

</LinearLayout>
