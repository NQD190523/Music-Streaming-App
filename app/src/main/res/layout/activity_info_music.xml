<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_20">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imvdropdown"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="16dp"
                android:src="@drawable/ic_down"/>

            <TextView
                android:id="@+id/txttittle"
                style="@style/LabelBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:text="Info"
                android:textColor="@color/white" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_song"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imvPhoto"
                    android:layout_width="61dp"
                    android:layout_height="46dp"
                    android:src="@drawable/song1"  />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtSongName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Blank Space"
                        android:textColor="@color/white"
                        style="@style/Heading7"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtSinger"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="Taylor Swift"
                        android:textColor="@color/subText"
                        style="@style/Subtile3" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:src="@drawable/ic_heart_16_outlined"
                            android:layout_gravity="center"/>

                        <TextView
                            android:id="@+id/txtlike"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="3dp"
                            android:text="Like"
                            android:textColor="@color/subText"
                            style="@style/Subtile3" />

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginStart="25dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_music_16_outlined" />

                        <TextView
                            android:id="@+id/txtMusic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="3dp"
                            android:text="Music"
                            android:textColor="@color/subText"
                            style="@style/Subtile3" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/white"
                android:layout_marginStart="28dp"
                android:layout_marginEnd="28dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="20dp"
                    android:padding="8dp">
                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="Album"
                        android:textColor="@color/subText"
                        style="@style/Subtile3"/>
                    <TextView
                        android:id="@+id/txtAlbum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1989"
                        android:textColor="@color/white"
                        style="@style/Subtile3"
                        android:layout_marginLeft="@dimen/dp_20"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="20dp"
                    android:padding="8dp">
                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="Musican"
                        android:textColor="@color/subText"
                        style="@style/Subtile3"/>
                    <TextView
                        android:id="@+id/txtMusician"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Taylor Swift"
                        android:textColor="@color/white"
                        android:layout_marginLeft="@dimen/dp_20"
                        style="@style/Subtile3"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="20dp"
                    android:padding="8dp">
                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="Genre"
                        android:textColor="@color/subText"
                        style="@style/Subtile3"/>
                    <TextView
                        android:id="@+id/txtGenre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pop"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:textColor="@color/white"
                        style="@style/Subtile3"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="20dp"
                    android:padding="8dp">
                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="Released"
                        android:textColor="@color/subText"
                        style="@style/Subtile3"/>
                    <TextView
                        android:id="@+id/txtReleased"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2017"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:textColor="@color/white"
                        style="@style/Subtile3"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="20dp"
                    android:padding="8dp">

                    <TextView
                        style="@style/Subtile3"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="Producer"
                        android:textColor="@color/subText" />
                    <TextView
                        android:id="@+id/txtDuration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Teddy, Tommy Brown, R. Tee, Steven Franks and 24"
                        android:textColor="@color/white"
                        android:layout_marginLeft="@dimen/dp_20"
                        style="@style/Subtile3"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_10">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recommended playlists"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                style="@style/Heading6"
                android:textStyle="bold"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_10">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recommended songs"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                style="@style/Heading6"
                android:textStyle="bold"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>