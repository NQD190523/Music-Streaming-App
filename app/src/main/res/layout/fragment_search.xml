<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/dark"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="21dp"
            android:paddingVertical="10dp"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/editText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:background="@drawable/comment_edt"
                android:drawableLeft="@drawable/ic_search_16_outlined"
                android:drawablePadding="8dp"
                android:fontFamily="@font/inter_medium"
                android:hint="What do you want to listen to?"
                android:paddingHorizontal="20dp"
                android:textColorHint="@color/white"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/txtCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Cancel"
                android:textColor="@color/white"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="History"
            android:textColor="@color/white"
            style="@style/Heading4"
            android:layout_marginTop="32dp"
            android:paddingHorizontal="21dp"/>

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="21dp"
            android:paddingVertical="10dp"
            app:alignItems="center"
            app:flexWrap="wrap"
            app:justifyContent="flex_start"
            tools:ignore="MissingClass">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_color_white"
                android:gravity="center"
                android:padding="10dp"
                android:text="Search history"
                android:textColor="@color/white"
                android:textSize="15dp"
                app:layout_flexBasisPercent="30%"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/sp_12"
                android:background="@drawable/button_color_white"
                android:gravity="center"
                android:padding="10dp"
                android:text="Pop"
                android:textColor="@color/white"
                android:textSize="15dp"
                app:layout_flexBasisPercent="20%" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/sp_12"
                android:background="@drawable/button_color_white"
                android:gravity="center"
                android:padding="10dp"
                android:text="Artist"
                android:textColor="@color/white"
                android:textSize="15dp"
                app:layout_flexBasisPercent="20%" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/sp_12"
                android:background="@drawable/button_color_white"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="Sleeptime"
                android:textColor="@color/white"
                android:textSize="15dp"
                app:layout_flexBasisPercent="30%" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/sp_12"
                android:background="@drawable/button_color_white"
                android:gravity="center"
                android:padding="10dp"
                android:text="New TextView"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:textSize="15dp"
                app:layout_flexBasisPercent="30%"
                android:singleLine="true" />

        </com.google.android.flexbox.FlexboxLayout>

        <TextView
            style="@style/Heading4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:paddingHorizontal="21dp"
            android:text="Popular"
            android:textColor="@color/white" />

        <GridView
            android:id="@+id/gridviewSearch"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:columnWidth="90dp"
            android:gravity="center"
            android:horizontalSpacing="10dp"
            android:numColumns="2"
            android:stretchMode="columnWidth"
            android:verticalSpacing="10dp" />
    </LinearLayout>
</RelativeLayout>
