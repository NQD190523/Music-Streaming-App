<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_playlist"
    android:gravity="center_horizontal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="61dp">

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:paddingBottom="@dimen/dp_24"
                        android:src="@drawable/song1" />

                    <LinearLayout
                        android:layout_width="128dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imvDownload"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/dp_16"
                            android:src="@drawable/ic_download_16_outlined" />

                        <ImageButton
                            android:id="@+id/btnPlay"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginRight="@dimen/dp_16"
                            android:background="@drawable/round_btn"
                            android:drawablePadding="30dp"
                            android:gravity="center"
                            android:src="@drawable/ic_play_16_filled" />

                        <ImageView
                            android:id="@+id/imvShuffle"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_shuffle_16_filled" />
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_20"
                android:paddingTop="@dimen/dp_20"
                android:paddingRight="@dimen/dp_20">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/Heading4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sleeping Songs"
                        android:textColor="@color/white" />

                    <TextView
                        style="@style/Label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8 songs"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imvSearch"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_search_16_filled" />

                    <ImageView
                        android:id="@+id/imvAdd"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:gravity="end"
                        android:src="@drawable/ic_add_16_filled" />
                </LinearLayout>
            </LinearLayout>

            <ListView
                android:id="@+id/lstPlalist"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@+id/linearLayout" />

            <TextView
                style="@style/Heading5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lstPlalist"
                android:paddingLeft="@dimen/dp_20"
                android:text="Recommended songs"
                android:textColor="@color/white" />

            <ListView
                android:id="@+id/lstRecommendSong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                style="@style/Heading5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lstPlalist"
                android:paddingLeft="@dimen/dp_20"
                android:text="Recommended songs"
                android:textColor="@color/white" />
            <TextView
                style="@style/Heading5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lstPlalist"
                android:paddingLeft="@dimen/dp_20"
                android:text="Recommended songs"
                android:textColor="@color/white" />
            <TextView
                style="@style/Heading5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lstPlalist"
                android:paddingLeft="@dimen/dp_20"
                android:text="Recommended songs"
                android:textColor="@color/white" />


        </LinearLayout>


    </ScrollView>


</RelativeLayout>