<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/imvPhoto"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/song1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtSongName"
                style="@style/Body1Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blank Space"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtSinger"
                style="@style/Body2Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Taylor Swift"
                android:textColor="@color/subText" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_gravity="center_vertical">
            <ImageView
                android:id="@+id/btn_add"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_add_24_outlined"
                android:layout_marginRight="@dimen/dp_16"/>
            <ImageView
                android:id="@+id/btn_moreAction"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_more"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>