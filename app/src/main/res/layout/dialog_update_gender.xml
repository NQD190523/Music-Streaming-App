<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="315dp"
    android:layout_height="285dp"
    android:background="@drawable/bg_update_profile"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_dialog"
        style="@style/Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Your Gender"
        android:textColor="@color/text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#00FFFFFF"
        android:src="@drawable/ic_cancel_16_outlined"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtMale"
        style="@style/Body1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="28dp"
        android:layout_weight="1"
        android:text="Male"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/checkBoxSelectMale"
        app:layout_constraintStart_toEndOf="@+id/checkBoxSelectMale"
        app:layout_constraintTop_toTopOf="@+id/checkBoxSelectMale"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtFemale"
        style="@style/Body1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="28dp"
        android:layout_weight="1"
        android:text="Female"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/checkBoxSelectFemale"
        app:layout_constraintStart_toEndOf="@+id/checkBoxSelectFemale"
        app:layout_constraintTop_toTopOf="@+id/checkBoxSelectFemale"
        app:layout_constraintVertical_bias="0.0" />

    <CheckBox
        android:id="@+id/checkBoxSelectOther"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="60dp"
        android:button="@drawable/checkbox"
        android:drawablePadding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxSelectFemale" />

    <CheckBox
        android:id="@+id/checkBoxSelectFemale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="60dp"
        android:button="@drawable/checkbox"
        android:drawablePadding="8dp"
        app:layout_constraintBottom_toTopOf="@+id/checkBoxSelectOther"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxSelectMale" />

    <CheckBox
        android:id="@+id/checkBoxSelectMale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="60dp"
        android:layout_marginTop="32dp"
        android:button="@drawable/checkbox"
        android:drawablePadding="8dp"
        app:layout_constraintBottom_toTopOf="@+id/checkBoxSelectFemale"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtOther"
        style="@style/Body1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="28dp"
        android:layout_weight="1"
        android:text="Other"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/checkBoxSelectOther"
        app:layout_constraintStart_toEndOf="@+id/checkBoxSelectOther"
        app:layout_constraintTop_toTopOf="@+id/checkBoxSelectOther"
        app:layout_constraintVertical_bias="1.0" />

